<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/element_layout">
    <TextView
        android:id="@+id/level_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_string"
        android:layout_marginTop="@dimen/fragment_inner_margin"
        android:layout_marginStart="@dimen/fragment_inner_margin"
        android:layout_marginEnd="@dimen/fragment_padding"
        android:textSize="@dimen/fragment_text_size"/>
    <TextView
        android:id="@+id/level_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/level_view"
        android:layout_toEndOf="@id/level_view"
        android:layout_marginTop="@dimen/fragment_inner_margin"
        android:textSize="@dimen/fragment_text_size"
        tools:text="1"/>
    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/percent_string"
        android:layout_marginTop="@dimen/fragment_inner_margin"
        android:layout_marginEnd="@dimen/fragment_inner_margin"
        android:layout_marginStart="@dimen/fragment_padding"
        android:textSize="@dimen/fragment_text_size"/>
    <TextView
        android:id="@+id/level_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/percentage"
        android:layout_marginTop="@dimen/fragment_inner_margin"
        android:textSize="@dimen/fragment_text_size"
        tools:text="10"/>

</RelativeLayout>